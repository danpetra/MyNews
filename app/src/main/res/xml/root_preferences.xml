<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/location_header">

        <SwitchPreferenceCompat
            app:key="current_locale"
            app:title="@string/current_location_switch"
            app:summary="Allow the app to get your location"
            app:defaultValue="true"
            app:disableDependentsState="true"/>

        <ListPreference
            app:defaultValue="locale"
            app:entries="@array/country_entries"
            app:entryValues="@array/country_values"
            app:key="locale"
            app:title="Choose location (for top)"
            app:summary="Choose your location from the list"
            app:dependency="current_locale" />

        <ListPreference
            app:defaultValue="language"
            app:entries="@array/languages_entries"
            app:entryValues="@array/languages_values"
            app:key="language"
            app:title="Choose language (for everything)"
            app:summary="Choose your language from the list"
            app:dependency="current_locale" />

    </PreferenceCategory>

    <PreferenceCategory app:title="Notifications">

       <!-- <SwitchPreferenceCompat
            app:key="show_notification"
