<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_top">

    <fragment
        android:id="@+id/nav_top"
        android:name="com.example.mynews.ui.top.TopFragment"
        android:label="@string/menu_top"
        tools:layout="@layout/fragment_top" >
        <action
            android:id="@+id/action_nav_top_to_articleFragment"
            app:destination="@id/articleFragment" />
    </fragment>

    <fragment
        android:id="@+id/nav_everything"
        android:name="com.example.mynews.ui.everything.EverythingFragment"
        android:label="@string/menu_everything"
        tools:layout="@layout/fragment_everything" />

    <fragment
        android:id="@+id/nav_bookmarks"
        android:name="com.example.mynews.ui.bookmarks.BookmarksFragment"
        android:label="@string/menu_bookmarks"
        tools:layout="@layout/fragment_bookmarks" >
        <action
            android:id="@+id/action_nav_bookmarks_to_articleFragment"
            app:destination="@id/articleFragment" />
    </fragment>
    <fragment
        android:id="@+id/articleFragment"
        android:name="com.example.mynews.ui.article.ArticleFragment"
        android:label="ArticleFragment" >
        <argument
            android:name="url"
            app:argType="string" />
        <argument
            android:name="title"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="author"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="content"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="urlToImage"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="publishedAt"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="description"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="userId"
            app:argType="string" />
        <argument
            android:name="isBookmarked"
            app:argType="boolean" />
        <argument
            android:name="sourceId"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="sourceName"
            app:argType="string"
            app:nullable="true" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.mynews.ui.settings.SettingsFragment"
        android:label="SettingsFragment" />
</navigation>